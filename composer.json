{
  "name": "smspro/sms",
  "description": "SMSPRO API Packages",
  "type": "library",
  "require": {
    "php": ">=8.1",
    "ext-mbstring": "*",
    "ext-json": "*",
    "ext-mysqli": "*",
    "ext-curl": "*",
    "vlucas/valitron": "^1.4",
    "nicoswd/php-gpg": "^1.7",
    "giggsey/libphonenumber-for-php": "^8.10",
    "guzzlehttp/guzzle": "*",
    "icanboogie/inflector": "*"
  },
  "minimum-stability": "dev",
  "homepage": "https://sms.softeriatech.com",
  "license": "MIT",
  "prefer-stable": true,
  "require-dev": {
    "phpunit/phpunit": "^9.6.1"
  },
  "authors": [
    {
      "name": "SOFTERIA TECH LTD",
      "email": "support@softeriatech.com"
    }
  ],
  "keywords": [
    "SMSPRO",
    "SMS",
    "BULK SMS",
    "SMS Gateway",
    "GPG SMS encrytion",
    "Plugin smspro sms",
    "API-SMS"
  ],
  "autoload": {
    "psr-4": {
      "Smspro\\Sms\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Smspro\\Test\\": "tests"
    }
  },
  "suggest": {
    "phpunit/phpunit": "Allows automated tests to be run without system-wide install."
  },
  "scripts": {
    "test": "phpunit --colors=always"
  },
  "support": {
    "issues": "https://github.com/softeria-tech/smspro-php-lib/issues",
    "source": "https://github.com/softeria-tech/smspro-php-lib",
    "wiki": "https://github.com/softeria-tech/smspro-php-lib/wiki"
  }
}
